<Window x:Class="ScheduleSystem.DesktopClient.Views.StudentDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:ScheduleSystem.DesktopClient.ViewModels"
        Title="StudentDialog" Height="300" Width="300">
    <Window.DataContext>
        <ViewModel:StudentViewModel/>
    </Window.DataContext>
    <StackPanel>
        <Label>Name</Label>
        <TextBox Text="{Binding Path=Name}"></TextBox>
        <Label>CPR</Label>
        <TextBox Text="{Binding Path=CPR}"></TextBox>
        <Label>Email</Label>
        <TextBox Text="{Binding Path=Email}"></TextBox>
    </StackPanel>
</Window>
