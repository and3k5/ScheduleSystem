<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ViewModel="clr-namespace:ScheduleSystem.DesktopClient.ViewModels"
        xmlns:local ="clr-namespace:ScheduleSystem.DesktopClient"
        xmlns:Data="clr-namespace:ScheduleSystem.Data;assembly=ScheduleSystem.Data" x:Class="ScheduleSystem.DesktopClient.MainWindow"
        Title="MainWindow" Height="585" Width="824">
    <Window.DataContext>
        <Data:ScheduleSystemContext/>
    </Window.DataContext>
    <Grid>
        <Grid.Resources>
            <local:EditCourse x:Key="EC"/>
        </Grid.Resources>
        <Button Content="Course dialog" HorizontalAlignment="Left" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" Width="87" Click="Button_Click"/>
        <DataGrid x:Name="dGrid1"
            ItemsSource="{Binding Path=Courses.Local, UpdateSourceTrigger=PropertyChanged, NotifyOnSourceUpdated=True}"
			HorizontalAlignment="Left" 
            IsReadOnly="True"
			Margin="10,45,0,0" VerticalAlignment="Top" Height="499" Width="796"
			AutoGenerateColumns="False"
			AlternatingRowBackground="LightBlue"
			AlternationCount="1"
			GridLinesVisibility="All"
			CanUserReorderColumns="False"
			CanUserResizeColumns="True"
			CanUserResizeRows="True">

            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Delete" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Delete"
								Command="Delete"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}">
                </DataGridTextColumn>
                <DataGridTemplateColumn Header="Edit" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit"
								Command="{StaticResource EC}" CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>


        </DataGrid>
        <Button Content="Button" HorizontalAlignment="Left" Height="30" Margin="97,10,0,0" VerticalAlignment="Top" Width="98" Click="Button_Click_1"/>
    </Grid>
</Window>
